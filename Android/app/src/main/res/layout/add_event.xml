<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_below="@+id/okButton"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mycl">

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/table_height"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_border"
                android:hint="Title "
                android:paddingLeft="15dp"
                android:textColor="@color/text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/table_height"
                android:layout_below="@+id/editTitle"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_border"
                android:gravity="center_vertical"
                android:hint="Time"
                android:paddingLeft="15dp"
                android:textColor="@color/text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/table_height"
                android:layout_below="@+id/editTime"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_border"
                android:gravity="center_vertical"
                android:hint="Date"
                android:paddingLeft="15dp"
                android:textColor="@color/text"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editLocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/table_height"
                android:layout_below="@+id/editDate"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_border"
                android:gravity="center_vertical"
                android:hint="Location"
                android:paddingLeft="15dp"
                android:textColor="@color/text"
                android:textSize="15dp" />
            <EditText
                android:id="@+id/editOrg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/table_height"
                android:layout_below="@+id/editLocation"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_border"
                android:gravity="center_vertical"
                android:hint="Organizer Name"
                android:paddingLeft="15dp"
                android:textColor="@color/text"
                android:textSize="15dp" />

            <Button
                android:id="@+id/okButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editOrg"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/custom_border"
                android:gravity="center"
                android:text="OK"
                android:textColor="@android:color/holo_orange_dark" />


        </RelativeLayout>
    </ScrollView>


</FrameLayout>
